    <script>

$(function() {
  l = sessionStorage.getItem('login');
  t = sessionStorage.getItem('bearer');
  $.post("/api/logout", { login: l, token: t }, function(data) {
    console.log(data);
    if (data["result"] == "true") {
      info("logged out");
    } else {
      warn(data["error"]);
    }
  });
  setTimeout(function(){ go("/login"); }, 3000);
 });

    </script>
